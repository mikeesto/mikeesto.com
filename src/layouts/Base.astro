---
const { title, codeStyles } = Astro.props;
---

<html lang="en">
  <head
    ><meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <title>{title ? `${title} | Michael Esteban` : "Michael Esteban"}</title>
    <meta
      name="description"
      content="Michael Esteban's small slice of the internet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Raleway:wght@300;400;500;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      type="text/css"
      href={Astro.resolve("../styles/global.css")}
    />
    {codeStyles && (
      <link rel="stylesheet" href={Astro.resolve("../themes/tomorrow.css")} />
    )}

    <style>
      body {
        background-color: var(--bg-color);
        font-family: "Raleway", sans-serif;
        transition: all 0.3s ease;
        max-width: 700px;
        margin: 0 auto;
        transition: all 0.5s ease;
      }

      @media (max-width: 425px) {
        body {
          padding: 10px;
        }
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
