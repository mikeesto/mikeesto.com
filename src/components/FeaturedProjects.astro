---
import IconComponent from "./Icon.astro";
import { Play, Heart, Smile, Headphones } from "lucide";

const icons = {
  Heart,
  Play,
  Smile,
  Headphones,
};

const projects = [
  {
    title: "Kind Wordle",
    description: "A kinder version of Wordle that gives you all vowels",
    color: "bg-blue-50",
    textColor: "text-blue-900",
    icon: "Heart",
    link: "https://kindwordle.netlify.app/",
  },
  {
    title: "Gemini Transcribe",
    description:
      "Transcribe audio and video files with speaker diarization and logically grouped timestamps",
    color: "bg-green-50",
    textColor: "text-emerald-900",
    icon: "Headphones",
    link: "https://gemini-transcribe.fly.dev/",
  },
  {
    title: "YouTube Summariser",
    description: "Generate YouTube video summaries",
    color: "bg-amber-50",
    textColor: "text-amber-900",
    icon: "Play",
    link: "https://yt-summary.vercel.app/",
  },
  {
    title: "Emoji Maker",
    description: "Create and download custom emoji",
    color: "bg-purple-50",
    textColor: "text-purple-900",
    icon: "Smile",
    link: "https://emojimakers.netlify.app/",
  },
];
---

<section class="py-2">
  <div class="w-full max-w-5xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      {
        projects.map((project) => {
          const Icon = icons[project.icon];
          return (
            <a
              href={project.link}
              class={`
              block relative rounded-xl p-6
              ${project.color}
              border border-black/20
              text-center
              transition-all duration-300 ease-out
              hover:shadow-md hover:-translate-y-0.5
              focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black/5
            `}
              aria-label={`${project.title} - ${project.description}`}
            >
              <div class={`${project.textColor} flex justify-center`}>
                <IconComponent icon={Icon} />
              </div>

              <h3
                class={`text-xl font-semibold ${project.textColor} mt-4 mb-2`}
              >
                {project.title}
              </h3>

              <p class={`${project.textColor} text-sm opacity-75`}>
                {project.description}
              </p>
            </a>
          );
        })
      }
    </div>
  </div>

  <div class="mt-6">
    <a
      href="/projects"
      class="inline-flex items-center gap-2 px-4 py-2.5 rounded-lg bg-gray-50 hover:bg-gray-100 border border-gray-300 hover:border-gray-400 transition-all duration-200 group text-sm font-medium"
    >
      <span class="text-gray-700">All projects</span>
      <span
        class="transition-transform duration-200 transform group-hover:translate-x-1 text-gray-500"
        aria-hidden="true"
      >
        â†’
      </span>
    </a>
  </div>
</section>
